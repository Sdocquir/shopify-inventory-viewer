{
 
  "manifest_version": 2,
  "name": "Shopify Inventory Viewer",
  "version": "1.0",

  "description": "Allows users to see inventory info on Shopify products",
  
  "icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

  "browser_action": {
	"default_icon": {
		"19": "icon19.png",
		"38": "icon38.png"
	},
	"default_title": "Inventory Viewer",
    "default_popup": "popup.html"
	
  },
  
  "permissions": [
	"activeTab"
  ],
  
  "content_scripts": [
	  {
			"matches": [
					"<all_urls>"
			 ],
			 
			 "js": ["jquery-2.1.4.min.js", "content.js"]
	  }
	]
}